@model RegisterViewModel

    <div class="row">
        <div class="col-6 p-4">
            <div class="card">
                <div class="card-header">
                    Register
                </div>
                <partial name="_ValidationSummary" />


                <div class="card-body">
                    <form asp-controller="account" asp-action="Register" method="Post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter email">
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Password">
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <button type="submit" class="btn btn-success">Register</button>
                        <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-primary">Back to login</a>
                    </form>
                </div>
            </div>
        </div>
                <div class="col-6">

                </div>
            </div>
